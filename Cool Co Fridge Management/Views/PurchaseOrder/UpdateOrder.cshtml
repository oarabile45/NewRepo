@model Cool_Co_Fridge_Management.Models.PurchaseOrder
@{
    ViewData["Title"] = "Update Order";
}
<h1>Order Details</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderID" />
            <div class="form-group">
                <label asp-for="OrderID" class="control-label"></label>
                <input asp-for="OrderID" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="ItemName" class="control-label"></label>
                <input asp-for="ItemName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="FridgeTypeID" class="control-label"></label>
                <input asp-for="FridgeTypeID" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="SupplierId" class="control-label"></label>
                <input asp-for="SupplierId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="OrderedDate" class="control-label"></label>
                <input asp-for="OrderedDate" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="OrderStatusId" class="control-label"></label>
                <select asp-for="OrderStatusId" class="form-control" asp-items="ViewBag.OrderStatus">
                    <option value="">--Status--</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
