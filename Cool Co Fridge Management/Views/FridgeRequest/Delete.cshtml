@model Cool_Co_Fridge_Management.Models.FridgeRequest

<h2>Delete Fridge Request</h2>

<h3>Are you sure you want to delete this request?</h3>
<div>
    <h4>Fridge Request</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Request ID</dt>
        <dd class="col-sm-10">@Model.FridgeRequestID</dd>
        <dt class="col-sm-2">Fridge Type</dt>
        <dd class="col-sm-10">@Model.FridgeType?.FridgeType</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="FridgeRequestID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>

<a asp-action="Index">Back to List</a>

