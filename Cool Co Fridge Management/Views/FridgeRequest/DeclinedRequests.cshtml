@model IEnumerable<Cool_Co_Fridge_Management.Models.FridgeRequest>

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2><div class="section-heading">Declined Fridge Requests</div></h2>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Fridge Type</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.FridgeType?.FridgeType</td>
                <td>@item.Status</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-controller="FridgeAllocations" asp-action="ViewRequests">Back</a>
</p>