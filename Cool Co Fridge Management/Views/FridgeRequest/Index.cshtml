@model IEnumerable<Cool_Co_Fridge_Management.Models.FridgeRequest>

<h2>Fridge Requests</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Fridge Type</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.FridgeType?.FridgeType</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FridgeRequestID" class="btn btn-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.FridgeRequestID" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="FridgeAllocations" asp-action="ViewRequests">Back</a>


