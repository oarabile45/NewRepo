@model IEnumerable<Cool_Co_Fridge_Management.Models.Notification>
@{
    ViewData["Title"] = "Notifications";
}

<h2>Notifications</h2>

@if (!Model.Any())
{
    <p>No new notifications</p>
}
else
{
    <ul>
        @foreach (var notification in Model)
        {
            <li>
                @notification.Message - @notification.CreatedAt.ToString("g")
                @Html.ActionLink("Mark as Read", "MarkAsRead", new { notification.NotificationId })
            </li>
        }
    </ul>
}
