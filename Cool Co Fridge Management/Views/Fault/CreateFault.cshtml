@model Cool_Co_Fridge_Management.Models.Fault

<h2>Create Fault</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.Label("FaultTech")
        @Html.DropDownList("FaultTechId", (SelectList)ViewBag.Techs, "Select Technician", new { @class = "form-control"})
    </div>

    <button type="submit" class="btn btn-primary">Create Fault</button>

}
