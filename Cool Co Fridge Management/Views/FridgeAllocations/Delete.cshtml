@model Cool_Co_Fridge_Management.Models.FridgeAllocation

<h2>Are you sure you want to delete this allocation?</h2>

<dl class="row">
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Fridge</dt>
    <dd class="col-sm-10">@Model.Fridge_Stock.ItemName</dd>
    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="FridgeAllocationID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

