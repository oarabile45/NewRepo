@model Cool_Co_Fridge_Management.Models.FridgeAllocation

@{
    ViewData["Title"] = "Delete Fridge Allocation";
}

<h2>Delete Fridge Allocation</h2>

<div>
    <h3>Are you sure you want to delete this allocation?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                Fridge
            </dt>
            <dd class="col-sm-10">
                @Model.Fridge_Stock?.ItemName
            </dd>
            <dt class="col-sm-2">
                Allocation Date
            </dt>
            <dd class="col-sm-10">
                @Model.AllocationDate.ToString("yyyy-MM-dd")
            </dd>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="FridgeAllocationID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ViewRequests" class="btn btn-secondary">Cancel</a>
    </form>
</div>
