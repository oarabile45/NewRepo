@model Cool_Co_Fridge_Management.Models.FridgeAllocation

@{
    ViewData["Title"] = "Edit Fridge Allocation";
}

<h2>Edit Fridge Allocation</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="FridgeAllocationID" />

    <div class="form-group">
        <label asp-for="Email" class="control-label">Customer Email</label>
        <select asp-for="Email" class="form-control" asp-items="ViewBag.Email">
            <option value="">-- Select a Customer Email --</option>
        </select>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FridgeID" class="control-label">Available Fridges</label>
        <select asp-for="FridgeID" class="form-control" asp-items="ViewBag.FridgeID">
            <option value="">-- Select a Fridge --</option>
        </select>
        <span asp-validation-for="FridgeID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FridgeRequestID" class="control-label">Request ID</label>
        <select asp-for="FridgeRequestID" class="form-control" asp-items="ViewBag.FridgeRequestID">
            <option value="">-- Select a Request --</option>
        </select>
        <span asp-validation-for="FridgeRequestID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="ViewRequests" class="btn btn-secondary">Back to Requests</a>
</form>
