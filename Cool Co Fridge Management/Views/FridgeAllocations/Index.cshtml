@model IEnumerable<Cool_Co_Fridge_Management.Models.FridgeAllocation>

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="section-heading">Fridge Allocations</div>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Fridge Type</th>
            <th>Status</th>
            <th>Allocation Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.FridgeType</td>
                <td>@item.Status</td>
                <td>@item.AllocationDate.ToString("MM/dd/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FridgeAllocationID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.FridgeAllocationID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Allocation</a>
