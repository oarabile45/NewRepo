@model Cool_Co_Fridge_Management.Models.MaintenanceRequest

<h2>Approve Maintenance Request</h2>
<p>Are you sure you want to reject this maintenance request for @Model.FirstName @Model.LastName?</p>

<form asp-action="RejectConfirmed" method="post">
    <input type="hidden" asp-for="BookingID" />
    <button type="submit" class="btn btn-primary">Reject</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

