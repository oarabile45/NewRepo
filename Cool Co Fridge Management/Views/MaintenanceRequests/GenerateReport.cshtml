@model IEnumerable<Cool_Co_Fridge_Management.Models.MaintenanceRequest>

@{
    ViewData["Title"] = "Maintenance Requests";
}

<h1>Maintenance Requests</h1>

<p>
    <a asp-action="GeneratePdfReport" class="btn btn-info">Download PDF Report</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Requested Date</th>
            <th>Approved Date</th>
            <th>Status</th>
            <th>Fault Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.BookingID</td>
                <td>@request.FirstName</td>
                <td>@request.LastName</td>
                <td>@request.Address</td>
                <td>@request.RequestedDate.ToShortDateString()</td>
                <td>@(request.ApprovedDate?.ToShortDateString() ?? "N/A")</td>
                <td>@request.Status</td>
                <td>@request.FaultDescription</td>
                <td>
                    <a asp-action="Details" asp-route-id="@request.BookingID" class="btn btn-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@request.BookingID" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@request.BookingID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



