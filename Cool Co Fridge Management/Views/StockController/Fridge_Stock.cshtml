@model IEnumerable<Cool_Co_Fridge_Management.Models.Fridge_Stock>
@{
    ViewData["Title"] = "Fridge_Stock";
}

 
 <div class="container-p3">
     <div class="row pt-4"> 
         <div class="col-6">
             <h2>Stock List</h2>
         </div>
         <div class="col-6 text-right">
             <a asp-controller="StockController" asp-action="Update_Items">Add items</a>
         </div>
     </div>
    <br />

    @if (Model != null && Model.Any()) @* (Model.Count() > 0) *@
    {
        <table>
            <thead>
                <tr>
                    <th>ItemName</th>
                    <th>Fridge Type</th>
                    <th>Quantity</th>
                    <th>Availability</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var stock in Model)
                {
                    <tr>
                        <td width="30%">@stock.ItemName</td>
                        <td width="30%">@stock.Fridge_Type.FridgeType</td>
                        <td width="30%">@stock.Quantity</td>
                        <td width="30%">@stock.Availability</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> no records</p>
    }
 </div>



