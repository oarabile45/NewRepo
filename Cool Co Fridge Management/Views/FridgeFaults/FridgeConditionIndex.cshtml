@model IEnumerable<Cool_Co_Fridge_Management.Models.FridgeFault>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1>FRIDGE CONDITION</h1>
        </div>
    </div>
</div>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.faultType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReportedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RepairDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Condition)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.faultType.FaultTypeDesc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReportedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RepairDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Condition.ConditionDesc)
                </td>
                <td>
                    <a asp-action="FixedFridgeCondition" asp-route-id="@item.FridgeFaultID">Fixed</a> |
                    <a asp-action="BeyondRepairFridgeCondition" asp-route-id="@item.FridgeFaultID">Beyond Repair</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-controller="Home" asp-action="Index">Back</a>
</p>