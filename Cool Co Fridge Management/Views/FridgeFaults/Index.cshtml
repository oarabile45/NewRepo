@model IEnumerable<Cool_Co_Fridge_Management.Models.FridgeFault>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1>REPORTED FRIDGE FAULTS</h1>
        </div>
    </div>
</div>
<hr />

<p>
    <a class="btn btn-primary" asp-action="Create">Report Fault</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.faultType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReportedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.faultType.FaultTypeDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportedOn)
            </td>
            <td style="color:orange">
                @Html.DisplayFor(modelItem => item.status.StatusDesc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FridgeFaultID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FridgeFaultID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FridgeFaultID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-controller="Home" asp-action="Index">Back</a>
</p>