@model Cool_Co_Fridge_Management.Models.PurchaseRequest
<h1>New Request</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action=NewRequest>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FridgeTypeID" class="control-label"></label>
                <select asp-for="FridgeTypeID" class="form-control" asp-items="ViewBag.Types">
                    <option value="">Select Fridge Type</option>
                </select>
                <span asp-validation-for="FridgeTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" type="datetime-local" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestQuantity" class="control-label"></label>
                <input asp-for="RequestQuantity" class="form-control" />
                <span asp-validation-for="RequestQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderStatusId" class="control-label"></label>
                <select asp-for="OrderStatusId" class="form-control" asp-items="ViewBag.OrderStatus"></select>
                <span asp-validation-for="OrderStatusId" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Send Request" class="btn btn-primary" name="submit" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Requests">Back</a>
</div>