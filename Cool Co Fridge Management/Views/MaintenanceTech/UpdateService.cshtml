@model Cool_Co_Fridge_Management.Models.MaintenanceRequest
@{
    ViewData["Title"] = "Update Service";
}

<h2>Update Service Details</h2>

<form method="post" action="Url.Action("UpdateService", new {id = Model.BookingID})"> 
    <div class="form-group">
        <label for="Description">Fault Description</label>
        <textarea id="Description" name="Description" class="form-control">@Model.FaultDescription</textarea>
    </div>

    <input type="submit" value="Update Service" class="btn btn-primary" />
    @Html.ActionLink("Cancel", "index", null, new { @class = "btn btn-danger"})
</form>

