@model Cool_Co_Fridge_Management.Models.MaintenanceRequest

<h2>Delete Maintenance Request</h2>


<div>
    <h4>Are you sure you want to delete this request?</h4>
    <div>
        <strong>First Name:</strong> @Model.FirstName<br />
        <strong>Last Name:</strong> @Model.LastName<br />
        <strong>Address:</strong> @Model.Address<br />
        <strong>Requested Date:</strong> @Model.RequestedDate<br />
        <strong>Status:</strong> @Model.Status<br />
    </div>
</div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="BookingID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>






