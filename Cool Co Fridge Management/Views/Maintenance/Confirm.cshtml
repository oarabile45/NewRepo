@model IEnumerable<Cool_Co_Fridge_Management.Models.MaintenanceRequest>

<h2>Approved Maintenance Requests</h2>

<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Customer Name</th>
            <th>Requested Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingID</td>
                <td>@booking.FirstName @booking.LastName</td>
                <td>@booking.RequestedDate.ToString("g")</td>
                <td>
                    <form asp-action="Confirm" method="post">
                        <input type="hidden" name="bookingId" value="@booking.BookingID" />
                        <button type="submit" name="status" value="Confirmed" class="btn btn-primary">Confirm</button>
                        <button type="submit" name="status" value="Canceled" class="btn btn-secondary">Cancel</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


