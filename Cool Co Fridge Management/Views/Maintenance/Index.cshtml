@model IEnumerable<Cool_Co_Fridge_Management.Models.MaintenanceRequest>
@{
    ViewData["Title"] = "Index";
}

<h2>Maintenance Bookings</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Customer Name</th>
            <th>Address</th>
            <th>Requested Date</th>
            <th>Approval Status</th>
           @*  <th>Fault Description</th> *@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingID</td>
                <td>@booking.User.FirstName @booking.User.LastName</td>
                <td>@booking.Address</td>
                <td>@booking.RequestedDate.ToString("g")</td>
                <td>
                    @if (booking.IsApprovedByTechnician)
                    {
                        <span class="text-success">Approved</span>
                    }
                    else
                    {
                        <span class="text-warning">Pending</span>
                    }
                </td>
               @*  <td>@booking.FaultDescription</td> *@
                <td>
                    @Html.ActionLink("Details", "Details", new { id = booking.BookingID }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Edit", "Edit", new { id = booking.BookingID }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = booking.BookingID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p>No bookings available.</p>
}
