@model IEnumerable<Cool_Co_Fridge_Management.Models.MaintenanceRequest>

@{
    ViewData["Title"] = "Index";
}

<h2>Maintenance Requests</h2>
<a asp-action="Create"><</a>
<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Customer Name</th>
            <th>Requested Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.BookingID</td>
                <td>@request.FirstName @request.LastName</td>
                <td>@request.RequestedDate.ToString("g")</td>
                <td>@request.status.ToString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@request.BookingID" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@request.BookingID" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@request.BookingID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Request</a>




 
