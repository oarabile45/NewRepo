@model IEnumerable<Cool_Co_Fridge_Management.Models.MaintenanceRequest>

@{
    ViewData["Title"] = "Pending Maintenance Requests";
}

<h2>Pending Maintenance Requests</h2>

<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Customer Name</th>
            <th>Requested Date</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingID</td>
                <td>@booking.User.FirstName @booking.User.LastName</td>
                <td>@booking.RequestedDate.ToString("g")</td>
                <td>@booking.Address</td>
                <td>
                   <form asp-action="Approve" method="post" style="display:inline;">
    <input type="hidden" name="bookingId" value="@booking.BookingID" />
    <button type="submit" class="btn btn-success">Approve</button>
                  </form>
                  <form asp-action="Cancel" method="post" style="display:inline;">
    <input type="hidden" name="bookingId" value="@booking.BookingID" />
    <button type="submit" class="btn btn-danger">Cancel</button>
                 </form>
                </td>
            </tr>
        }
    </tbody>
</table>

