@model Cool_Co_Fridge_Management.Models.MaintenanceRequest

<h2>Confirm Booking</h2>

<div>
    <h4>Booking Details</h4>
    <p><strong>Requested Date:</strong> @Model.RequestedDate.ToString("g")</p>
    <p><strong>Approved Date:</strong> @Model.ApprovedDate?.ToString("g")</p>
    <p><strong>Status:</strong> @Model.status</p>
</div>

@if (Model.IsApprovedByTechnician && Model.UserConfirmationStatus == "Pending")
{
    <form asp-action="UserConfirmation" method="post">
        @Html.HiddenFor(model => model.BookingID)
        <button type="submit" name="confirmation" value="confirm" class="btn btn-success">Confirm</button>
        <button type="submit" name="confirmation" value="cancel" class="btn btn-danger">Cancel</button>
    </form>
}

@Html.ActionLink("Back to List", "Index")

