@model IEnumerable<Cool_Co_Fridge_Management.Models.FridgeCondition>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ConditionDesc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ConditionDesc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ConditionID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ConditionID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ConditionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
